{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist-electron",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["electron/**/*.ts", "vite.config.ts", "src/types/**/*.ts"]
}
